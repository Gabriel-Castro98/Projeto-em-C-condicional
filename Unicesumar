#include <stdio.h>
#include <stdlib.h>

int main () {

   //CRIANDO UMA VARIÁVEL
   float valor1, valor2;

   //SOLICITAR AO USUARIO PARA DIGITAR UM VALOR
   printf("digite o primeiro valor: \n");

   //REALIZANDO ENTRADA DE DADOS
   // %d -> VALOR INTEIRO
   // %f -> VALOR DECIMAL
   // %c -> CARACTER
   // & -> MANIPULAÇAO DO VALOR INDICADO PELA VARIÁVEL
   scanf("%f", &valor1);

   printf("informe o segundo valor:\n");
   scanf("%f", &valor2);

   int resultado = valor1 + valor2;
   printf("o resultado da soma dos dois valores igual a: %.2f\n", resultado);

   system("pause");
   return 0;
   }

